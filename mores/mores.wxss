/* pages/mores/mores.wxss */
.now{
  height: 860rpx;
  padding-top: 20rpx;
}
.now-title{
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  font-size: 18px;
}
.now-body{
  display: flex;
  flex-wrap: wrap;
}
.now-body-item{
  box-sizing: border-box;
  width: 50%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.now-body-item image{
  width: 360rpx;
  height: 200rpx; 
}
.now-body-dm{
  font-size: 15px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.now-body-js{
  font-size: 12px;
  color: #666;
}
.city{
  display: flex;
  flex-direction: column;
}
.city-dm{
  font-size: 16px;
  text-align: center;
  padding-top: 50rpx;
}
.city-js{
  font-size: 12px;
  text-align: center;
  color: #666;
  padding: 10rpx;
}
.city-pic{
  display: flex;
  flex-wrap: nowrap;
  padding: 10rpx;
}
.city-pic-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.3%;
  box-sizing: border-box;
}
.city-pic-item image{
  width: 230rpx;
  height: 200rpx;
}
.others{
  display: flex;
  flex-direction: column;
  height: 400rpx;
  margin-top: 50rpx;
}
.others-title{
  font-size: 16px;
  text-align: center;
}
.others-intro{
  font-size: 12px;
  color: #666;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}
.others-det{
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}
.others-det navigator{
  box-sizing: border-box;
  width: 33.3%;
  position: relative;
  text-align: center;
}
.others-det navigator image{
  width: 90%;
  height: 200rpx;
}
.others-det text{
  position: absolute;
  top: 80rpx;
  left: 80rpx;
  color: white;
}